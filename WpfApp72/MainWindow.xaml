<Window x:Class="WpfApp72.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp72"
        mc:Ignorable="d"
        Icon="bin.ico"
        Title="Bináris óra" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Ellipse Grid.Row="0" Grid.Column="0" Width="60" Height="60" />
        <Ellipse Grid.Row="1" Grid.Column="0" Width="60" Height="60" />
        <Ellipse Grid.Row="2" Grid.Column="0" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="3" Grid.Column="0" Width="60" Height="60" Fill="LightGray"/>

        <Ellipse Grid.Row="0" Grid.Column="1" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="1" Grid.Column="1" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="2" Grid.Column="1" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="3" Grid.Column="1" Width="60" Height="60" Fill="LightGray"/>

        <Ellipse Grid.Row="0" Grid.Column="3" Width="60" Height="60" />
        <Ellipse Grid.Row="1" Grid.Column="3" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="2" Grid.Column="3" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="3" Grid.Column="3" Width="60" Height="60" Fill="LightGray"/>

        <Ellipse Grid.Row="0" Grid.Column="4" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="1" Grid.Column="4" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="2" Grid.Column="4" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="3" Grid.Column="4" Width="60" Height="60" Fill="LightGray"/>

        <Ellipse Grid.Row="0" Grid.Column="6" Width="60" Height="60" />
        <Ellipse Grid.Row="1" Grid.Column="6" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="2" Grid.Column="6" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="3" Grid.Column="6" Width="60" Height="60" Fill="LightGray"/>

        <Ellipse Grid.Row="0" Grid.Column="7" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="1" Grid.Column="7" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="2" Grid.Column="7" Width="60" Height="60" Fill="LightGray"/>
        <Ellipse Grid.Row="3" Grid.Column="7" Width="60" Height="60" Fill="LightGray"/>

        <TextBlock Name="hourFirst" Grid.Column="0" Grid.Row="4" Text="0" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="hourSecond" Grid.Column="1" Grid.Row="4" Text="0" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2" Grid.Row="4" Text=":" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="minuteFirst" Grid.Column="3" Grid.Row="4" Text="0" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="minuteSecond" Grid.Column="4" Grid.Row="4" Text="0" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="5" Grid.Row="4" Text=":" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="secFirst" Grid.Column="6" Grid.Row="4" Text="0" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="secSecond" Grid.Column="7" Grid.Row="4" Text="0" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Grid.Column="8" Grid.Row="0" Text="8" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="8" Grid.Row="1" Text="4" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="8" Grid.Row="2" Text="2" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="8" Grid.Row="3" Text="1" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
