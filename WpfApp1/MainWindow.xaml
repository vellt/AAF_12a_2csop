<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Icon="kepek/logo.ico"
        Title="A nagy pénzrablás" Height="450" Width="800">
    <StackPanel Orientation="Vertical"
                VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Válassz ki egy karaktert" FontSize="30"  HorizontalAlignment="Center" Margin="20"/>
        <ComboBox Name="valaszto"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <TextBlock FontSize="20" Text="A kiválasztottad neve: "/>
            <TextBlock FontSize="20" Name="varosNeve" Text="-" FontWeight="Bold" Foreground="DodgerBlue"/>
        </StackPanel>
        <Grid Name="kepTarolo" HorizontalAlignment="Center">
            <!-- a kiválasztott képe-->
            <TextBlock Text="* A kiválasztottad képe *"/>
        </Grid>
    </StackPanel>
</Window>
