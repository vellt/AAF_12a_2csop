<Window x:Class="WpfApp48.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp48"
        mc:Ignorable="d"
        Title="What do you meme?" Height="600" Width="800" Background="Black"
        BorderThickness="5" BorderBrush="Yellow">
    <StackPanel VerticalAlignment="Center">
        <Image Name="kep" Source="Images/1.jpg" Height="250" />
        <TextBlock Name="szoveg" TextAlignment="Center" Margin="100 30" Foreground="White" TextWrapping="Wrap" FontSize="30" Text="Az a fej, amikor segítesz az öscédnek megkeresni azt a Mikluás csomagból eltünt édességet, amit tegnap este ettél meg."/>
        <Button Content="Új meme" Width="200" FontSize="30" Background="Yellow"
                BorderThickness="3" BorderBrush="Orange" Foreground="Orange"
                FontWeight="Bold" Name="gomb"/>
    </StackPanel>
</Window>
