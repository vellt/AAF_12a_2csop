<Window x:Class="Kutyaev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kutyaev"
        mc:Ignorable="d"
        Icon="dog.ico"
        Title="Kutyaév" Height="700" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
        <Image Source="head.png"/>
        <TextBlock Text="Kutyaév" FontWeight="Bold" FontSize="25" TextAlignment="Center"/>
        <TextBlock Margin="20" Text="Add meg a kutyád korát és megmondom mennyi idős valójában." TextWrapping="Wrap" FontSize="18" TextAlignment="Center"/>
        <TextBox Name="bevitel" Text="0" FontSize="18" Padding="8"/>
        <Button Name="gomb" Margin="0 15" Padding="8" FontSize="18" Background="Gray" Foreground="White" Content="Kutyaév kiszámítása"/>
        <TextBlock Text="A kutyád kora valójában:" FontSize="18" TextAlignment="Center"/>
        <TextBlock Name="szoveg" Text="0" TextAlignment="Center" Margin="10" FontWeight="Bold" FontSize="40"/>
    </StackPanel>
</Window>
