<Window x:Class="WpfApp60.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp60"
        mc:Ignorable="d"
        Title="Dinamikus csillagok" Height="450" Width="800"
        Background="Black" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="poster.jpg" Width="200"/>
            <StackPanel Name="csillagok" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                <Image Source="star.png" Height="20"/>
                <Image Source="star.png" Height="20"/>
                <Image Source="star.png" Height="20"/>
                <Image Source="star.png" Height="20"/>
                <Image Source="star.png" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="csokkent" Content="Csökkent" BorderBrush="Orange" BorderThickness="5"
                        Foreground="Orange" FontWeight="Bold" Background="Yellow"
                        FontSize="20" Padding="5" Margin="0 0 10 0"/>
                <Button Name="novel" Content="Növel" BorderBrush="Orange" BorderThickness="5"
                        Foreground="Orange" FontWeight="Bold" Background="Yellow"
                        FontSize="20" Padding="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
