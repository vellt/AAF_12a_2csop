<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        Background="CadetBlue"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Icon="hand.ico"
        Title="Üdvözlő app" Height="300" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" 
                    Background="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Név" Margin="10" FontSize="40"/>
            <GroupBox Header="Vezetéknév" BorderBrush="Transparent" Margin="10">
                <TextBox Name="vez" Width="200"/>
            </GroupBox>
            <GroupBox Header="Keresztnév *" BorderBrush="Transparent" Margin="10">
                <TextBox Name="ker" Width="200"/>
            </GroupBox>
            <Button Name="gomb" Content="helló" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
