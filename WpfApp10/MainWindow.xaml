<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        Background="CadetBlue"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Icon="hand.ico"
        Title="Számológép" Height="300" Width="1000">
    <Grid>
        <StackPanel Orientation="Horizontal" 
                    Background="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Számok" Margin="10" FontSize="40"/>
            <GroupBox Header="Szám 1" BorderBrush="Transparent" Margin="10">
                <TextBox Name="szam1" Width="200" FontSize="20"/>
            </GroupBox>
            <GroupBox Header="Szám 2" BorderBrush="Transparent" Margin="10">
                <TextBox Name="szam2" Width="200" FontSize="20"/>
            </GroupBox>
            <Button Name="osszeadas" 
                    Content="+" 
                    Background="Orange" 
                    Foreground="White" 
                    FontSize="30" 
                    Width="50" 
                    Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
